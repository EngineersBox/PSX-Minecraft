{
    "$id": "/assets/recipes",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "pattern": {
                "type": "array",
                "items": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
                    },
                    "minItems": 1,
                    "maxItems": 3
                },
                "minItems": 1,
                "maxItems": 3
            },
            "result": {
                "type": "string",
                "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
            }
        },
        "required": [
            "pattern",
            "result"
        ],
        "additionalProperties": false
    },
    "minItems": 1
}
