{
    "$id": "/assets/recipes",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "pattern": {
                "type": "array",
                "items": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
                    },
                    "minItems": 1,
                    "maxItems": 3
                },
                "minItems": 1,
                "maxItems": 3
            },
            "results": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "item": {
                            "type": "string",
                            "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
                        },
                        "stack_size": {
                            "type": "integer",
                            "minimum": 1,
                            "maximum": 255
                        }
                    },
                    "required": [
                        "item",
                        "stack_size"
                    ],
                    "additionalProperties": false
                },
                "minItems": 1
            }
        },
        "required": [
            "pattern",
            "results"
        ],
        "additionalProperties": false
    },
    "minItems": 1
}
